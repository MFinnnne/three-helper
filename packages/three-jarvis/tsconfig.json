{
	"compilerOptions": {
		"rootDir": "./src",
		"declaration": true,
		"noImplicitAny": false,
		"target": "es6",
		"outDir": "./dist",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"experimentalDecorators": true,
		"useDefineForClassFields": false,
		"sourceMap": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": false
	},
	"exclude": [
		"node_modules/**/*",
		"**/*/*-test.ts"
	],
	"include": [
		"src/**/*.ts"
	]
}
