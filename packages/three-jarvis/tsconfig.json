{
  "compilerOptions": {
    "rootDir": "./src",
    "noImplicitAny": false,
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
  },
  "exclude": [
    "node_modules/**/*",
    "**/*/*-test.ts"
  ],
  "include": [
    "src/**/*.ts"
  ]
}